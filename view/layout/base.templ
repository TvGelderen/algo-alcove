package layout

import "github.com/TvGelderen/algo-alcove/view/components"

templ Base() {
	@Page() {
		@components.Header()
		<div
			id="page-container"
			class="w-[clamp(360px,97%,1500px)] h-[calc(100dvh_-_48px)] md:h-[calc(100dvh_-_60px)] mx-auto py-2 md:py-6"
